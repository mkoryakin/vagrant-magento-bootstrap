[{{ web_user_name }}]
user = {{ web_user_name }}
group = admin
listen = 9000
listen.owner = {{ web_user_name }}
listen.group = admin
listen.mode = 0660

pm = dynamic
pm.max_children = 10
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3

chdir = /

security.limit_extensions = .php .php3 .php4 .php5

slowlog = /home/{{ web_user_name }}/logs/{{ web_user_name }}-slow_{{ inventory_hostname }}.log
request_slowlog_timeout = 10s
php_admin_value[error_log] = /home/{{ web_user_name }}/logs/{{ web_user_name }}-error_{{ inventory_hostname }}.log
php_admin_flag[log_errors] = on
php_admin_value[session.save_path] = /home/{{ web_user_name }}/tmp
env[HOSTNAME] = $HOSTNAME
env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /home/{{ web_user_name }}/tmp
env[TMPDIR] = /home/{{ web_user_name }}/tmp
env[TEMP] = /home/{{ web_user_name }}/tmp
